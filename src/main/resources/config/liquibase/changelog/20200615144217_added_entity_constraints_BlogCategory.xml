<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity BlogCategory.
    -->
    <changeSet id="20200615144217-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="categories_id"
                                 baseTableName="blog_category"
                                 constraintName="fk_blog_category_categories_id"
                                 referencedColumnNames="id"
                                 referencedTableName="blog_post"/>

        <addForeignKeyConstraint baseColumnNames="subcategories_id"
                                 baseTableName="blog_category"
                                 constraintName="fk_blog_category_subcategories_id"
                                 referencedColumnNames="id"
                                 referencedTableName="blog_category"/>

    </changeSet>
</databaseChangeLog>
